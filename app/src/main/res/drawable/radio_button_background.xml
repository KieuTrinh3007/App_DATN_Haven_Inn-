<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#021B2E" /> <!-- Màu nền khi chọn -->
            <corners android:radius="30dp" /> <!-- Bo góc -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Màu nền khi không chọn -->
            <corners android:radius="30dp" /> <!-- Bo góc -->
        </shape>
    </item>
</selector>
