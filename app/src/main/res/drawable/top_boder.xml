<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for the shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B8B7B7"/> <!-- Màu nền của shape -->
        </shape>
    </item>

    <!-- Top border -->
    <item android:top="1dp"> <!-- Độ dày của borderTop -->
        <shape android:shape="rectangle">
            <solid android:color="#fff"/> <!-- Màu của borderTop -->
        </shape>
    </item>

</layer-list>
