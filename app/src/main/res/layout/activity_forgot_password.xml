<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#8EDEE8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="25dp"/>

    <!-- CardView bao bọc nội dung chính -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lòng nhập số điện thoại di động đã"
                android:textSize="16dp"
                android:textColor="#9CA0A8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đăng ký của bạn để khôi phục mật khẩu"
                android:textSize="16dp"
                android:textColor="#9CA0A8"/>
        </LinearLayout>

            <!-- Nhập số điện thoại -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="70dp">

                <EditText
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="15dp"
                    android:text="+84"
                    android:focusable="false"
                    android:enabled="false"
                    android:textSize="18dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bottom_border" />

                <EditText
                    android:id="@+id/edt_forgot_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số điện thoại"
                    android:paddingVertical="10dp"
                    android:layout_marginStart="75dp"
                    android:paddingStart="20dp"
                    android:textColorHint="#9CA0A8"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:background="@drawable/bottom_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="75dp"
                    android:text="|"
                    android:textSize="29dp"
                    android:textColor="#C4C4C4" />
            </RelativeLayout>

        <Button
            android:id="@+id/btn_dangnhap_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/khung_button"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
