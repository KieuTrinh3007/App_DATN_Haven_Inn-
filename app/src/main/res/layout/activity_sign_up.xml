<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6BCBA"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_back_signup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/white"
        android:paddingVertical="7dp"
        android:paddingRight="4dp"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="110dp"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/edt_dk_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bottom_border"
                    android:drawableLeft="@drawable/union"
                    android:drawablePadding="20dp"
                    android:hint="Họ và tên"
                    android:imeOptions="actionDone"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9CA0A8" />

                <EditText
                    android:id="@+id/edt_xacnhan_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bottom_border"
                    android:drawableLeft="@drawable/small_mail"
                    android:drawablePadding="18dp"
                    android:hint="Email"
                    android:imeOptions="actionDone"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9CA0A8" />

                <EditText
                    android:id="@+id/edt_dk_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bottom_border"
                    android:drawableLeft="@drawable/key"
                    android:drawablePadding="21dp"
                    android:hint="Mật khẩu"
                    android:imeOptions="actionDone"
                    android:paddingVertical="10dp"
                    android:paddingStart="6dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9CA0A8" />/>

                <TextView
                    android:id="@+id/btn_dangky"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung_button"
                    android:paddingVertical="10dp"
                    android:text="Tạo tài khoản"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


                <!-- Điều khoản -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Bằng cách tạo tài khoản, bạn đồng ý với "
                    android:textColor="#8E929B"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dangnhap_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_underline"
                        android:text="Điều khoản"
                        android:textColor="#00BD6B"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=" của chúng tôi."
                        android:textColor="#8E929B"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Bạn đã có tài khoản? "
                        android:textColor="#8E929B" />

                    <TextView
                        android:id="@+id/txt_dangnhap_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Đăng nhập"
                        android:textColor="#00BD6B"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>