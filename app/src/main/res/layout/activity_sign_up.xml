<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6BCBA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="25dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edt_dk_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/union"
            android:drawablePadding="20dp"
            android:hint="Họ và tên"
            android:textColor="@color/black"
            android:textColorHint="#9CA0A8"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="34dp"
            android:paddingVertical="10dp"
            android:background="@drawable/bottom_border" />

        <EditText
            android:id="@+id/edt_dk_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/union"
            android:drawablePadding="20dp"
            android:hint="Nhập email của bạn"
            android:textColor="@color/black"
            android:textColorHint="#9CA0A8"
            android:layout_marginBottom="34dp"
            android:paddingVertical="10dp"
            android:background="@drawable/bottom_border" />

        <EditText
            android:id="@+id/edt_dk_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/key"
            android:drawablePadding="20dp"
            android:hint="Mật khẩu"
            android:textColor="@color/black"
            android:textColorHint="#9CA0A8"
            android:paddingVertical="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bottom_border" />

        <TextView
            android:id="@+id/btn_dangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản"
            android:textAlignment="center"
            android:paddingVertical="10dp"
            android:background="@drawable/khung_button"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc đăng nhập bằng"
            android:layout_gravity="center"
            android:textColor="#8E929B"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp">

            <ImageView
                android:id="@+id/img_fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook"
                android:layout_marginRight="25dp" />

            <ImageView
                android:id="@+id/img_gg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google"
                android:layout_marginLeft="25dp" />
        </LinearLayout>

        <!-- Điều khoản -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bằng cách tạo tài khoản, bạn đồng ý với "
            android:textSize="14dp"
            android:textColor="#8E929B"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txt_dangnhap_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khoản"
                android:textSize="14dp"
                android:textColor="#00BD6B"
                android:background="@drawable/text_underline"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" của chúng tôi."
                android:textSize="14dp"
                android:textColor="#8E929B"
                android:layout_marginTop="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản? "
                android:textColor="#8E929B"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txt_dangnhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="#00BD6B"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


    </LinearLayout>