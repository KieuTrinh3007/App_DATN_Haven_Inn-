<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_booking">

    <!-- Header Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/txt_tenPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt phòng bảo mật"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="68dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/top_boder">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Thông tin đặt phòng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/txt_soluongphong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="2 phòng : "
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txt_tenphong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Phòng đơn, ban công hướng ra biển, thoáng mát"
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_buasang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Thêm bữa sáng"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Nhận phòng : "
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txt_ngayNhanPhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="01/10/2024 "
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Trả phòng :  "
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txt_ngayTraPhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="03/10/2024 "
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_soDem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="2 đêm lưu trú"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/top_boder"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Thông tin khách hàng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Họ và tên : "
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txt_tenKhachHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Vũ Thị Vân Anh"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Số điện thoại : "
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txt_SDT_khachHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="0367974725"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/top_boder"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Phương thức thanh toán"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp" />


                    <LinearLayout
                        android:id="@+id/ttTrucTiep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_thanhtoan_tt"
                            android:contentDescription="Payment Icon"
                            android:layout_marginEnd="10dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thanh toán khi trả phòng"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical" />

                        <RadioButton
                            android:id="@+id/rdo_tructiep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/radio_button_color" />
                    </LinearLayout>

                    <!-- Phương thức 2 -->
                    <LinearLayout
                        android:id="@+id/ttQuaMoMo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_momo"
                            android:layout_marginEnd="10dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ví điện tử Momo"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical" />

                        <RadioButton
                            android:id="@+id/rdo_momo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/radio_button_color" />
                    </LinearLayout>


                <LinearLayout
                    android:id="@+id/txt_themThe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_them_the"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thẻ tín dụng/Thẻ ghi nợ"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_next"
                        android:layout_marginHorizontal="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txt_xemthem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_vnpay"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Xem tất cả tùy chọn"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="end" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_next"
                        android:layout_marginHorizontal="10dp" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/top_boder"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Chi tiết giá"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/btnVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/bg_radius_5_yellow"
                    android:drawableStart="@drawable/promo_code"
                    android:drawablePadding="10dp"
                    android:paddingHorizontal="10dp"
                    android:text="Giảm 20% giá phòng với Giá thành viên"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/txt_soPhong_soDem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="2 phòng, 2 đêm"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txt_tongGia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:text="3.000.000 đ"
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_tong1dem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:layout_marginLeft="20dp"
                    android:text="Trung bình mỗi đêm 1.500.000 đ"
                    android:textSize="12sp"/>


                <EditText
                    android:id="@+id/edtCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Nhập mã giảm giá của bạn"
                    android:textColorHint="#9CA0A8"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/bg_radius_5"
                    android:drawableStart="@drawable/promo_code"
                    android:drawablePadding="10dp"
                    android:paddingHorizontal="10dp"
                    android:drawableEnd="@drawable/ic_drop"
                    android:focusable="false"
                    android:clickable="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Tổng : "
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txt_giaChuaGiam"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        android:textColor="#272727"
                        android:text="3.000.000 đ"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/txt_giaDaGiam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:text="2900000"
                        android:textSize="16sp"/>

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/btnBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginHorizontal="47dp"
                android:background="@drawable/bg_radius_15_tt_phong"
                android:text="Hoàn tất đặt"
                android:textAllCaps="false"
                android:paddingVertical="8dp"
                android:textColor="@color/white"
                android:layout_marginVertical="30dp"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>