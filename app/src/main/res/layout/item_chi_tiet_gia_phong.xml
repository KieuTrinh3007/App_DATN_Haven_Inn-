<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_solid_5"
    android:paddingHorizontal="24dp"
    android:paddingVertical="12dp"
    android:layout_marginBottom="11dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_soPhong"
        android:layout_width="wrap_content"
        android:text="Số phòng :"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_tenPhong"
        android:layout_width="wrap_content"
        android:text="P402"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_giaPhong"
        android:layout_width="wrap_content"
        android:text="Giá phòng :"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_soPhong"
        android:layout_height="wrap_content"/>

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:text="600.000đ"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:fontFamily="@font/roboto_regular"-->
<!--        android:textSize="13sp"-->
<!--        app:layout_constraintEnd_toStartOf="@+id/tv_gia"-->
<!--        android:textColor="@color/black"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tv_soPhong"-->
<!--        android:layout_height="wrap_content"/>-->
    <TextView
        android:id="@+id/tv_gia"
        android:layout_width="wrap_content"
        android:text="600.000đ"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_soPhong"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_anSang"
        android:layout_width="wrap_content"
        android:text="Ăn sáng :"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_giaPhong"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_gia_an"
        android:layout_width="wrap_content"
        android:text=" 150.000đ"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_anSang"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_giaPhong"
        android:layout_height="wrap_content"/>

       <ImageView
           android:id="@+id/rdKhongBuaSang"
           android:layout_width="14dp"
           android:src="@drawable/iv_no_breakfast"
           app:layout_constraintTop_toBottomOf="@id/tv_giaPhong"
           android:layout_marginTop="10dp"
           android:layout_marginStart="24dp"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_height="14dp"/>

    <TextView
        android:id="@+id/tv_SLKhach"
        android:layout_width="wrap_content"
        android:text="Số lượng khách :"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_anSang"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_plus_SLKhach"
        android:layout_width="12dp"
        android:text="+"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_anSang"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="16dp"/>

    <TextView
        android:id="@+id/tv_SL"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_anSang"
        android:text="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/tv_plus_SLKhach"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_minus_SLKhach"
        android:layout_width="12dp"
        android:text="‒"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/tv_SL"
        app:layout_constraintTop_toBottomOf="@id/tv_anSang"
        android:layout_height="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>