<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/khung_tb"
        android:padding="8dp">

        <!-- Image on the left -->
        <ImageView
            android:id="@+id/room_image"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/avat2"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"/>

        <!-- Text information on the right -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên loại phòng: Phòng đơn, ban công hướng ra biển"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSoPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số phòng: 101"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/tvVIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIP: Có"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tvSLKhach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng khách: 2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvBuaSang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bữa sáng: Có"
                    android:textSize="12sp"
                    android:layout_marginLeft="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá phòng: 2.900.000 đ"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
