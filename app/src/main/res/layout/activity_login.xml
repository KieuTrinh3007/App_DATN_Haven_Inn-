<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8EDEE8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="25dp"
        android:padding="1dp" />



    <!-- CardView bao bọc nội dung chính -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/white">

        <!-- Nội dung bên trong CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <!-- Nhập số điện thoại -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="60dp">

                <EditText
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="15dp"
                    android:text="+84"
                    android:focusable="false"
                    android:enabled="false"
                    android:textSize="18dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bottom_border" />

                <EditText
                    android:id="@+id/edt_dangnhap_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số điện thoại"
                    android:paddingVertical="10dp"
                    android:layout_marginStart="75dp"
                    android:paddingStart="20dp"
                    android:textColorHint="#9CA0A8"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:background="@drawable/bottom_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="75dp"
                    android:text="|"
                    android:textSize="29dp"
                    android:textColor="#C4C4C4" />
            </RelativeLayout>

            <!-- Nhập mật khẩu -->
            <EditText
                android:id="@+id/edt_dangnhap_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/key"
                android:drawablePadding="20dp"
                android:hint="Mật khẩu"
                android:paddingVertical="10dp"
                android:textSize="18dp"
                android:background="@drawable/bottom_border"
                android:textColorHint="#9CA0A8"
                android:textColor="@color/black" />

            <!-- Quên mật khẩu -->
            <TextView
                android:id="@+id/txt_dangnhap_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center"
                android:textColor="#F44336"
                android:layout_marginTop="25dp" />

            <!-- Nút đăng nhập -->
            <TextView
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/khung_button"
                android:text="Đăng nhập"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <!-- Đăng nhập bằng mạng xã hội -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoặc đăng nhập bằng"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textColor="#8E929B"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/button_dangnhap_facebook"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/facebook"
                    android:layout_marginRight="25dp" />

                <ImageView
                    android:id="@+id/btn_dangnhap_google"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/google"
                    android:layout_marginLeft="25dp" />
            </LinearLayout>

            <!-- Điều khoản -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bằng cách tạo tài khoản, bạn đồng ý với "
                android:textSize="14dp"
                android:textColor="#8E929B"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txt_dangnhap_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều khoản"
                    android:textSize="14dp"
                    android:textColor="#00BD6B"
                    android:background="@drawable/text_underline"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" của chúng tôi."
                    android:textSize="14dp"
                    android:textColor="#8E929B"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <!-- Đăng ký -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn chưa có tài khoản? "
                    android:textSize="14dp"
                    android:textColor="#8E929B"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/txtSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:textColor="#00BD6B"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
