<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="13dp"
    tools:context=".PhongNghi">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="13dp"
        android:text="Hệ thống phòng nghỉ"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_radius_10"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lich"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/txtTuNgay"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:textSize="16sp"
                android:text="Từ ngày"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="16sp"
                android:text="-"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtDenNgay"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:textSize="16sp"
                android:text="Đến ngày"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_radius_10"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"/>
        <Spinner
            android:id="@+id/spinnerSoNguoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:spinnerMode="dropdown"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_radius_10"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_coin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/edtTuKhoang"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:layout_marginHorizontal="16dp"
                android:textSize="16sp"
                android:text="Từ khoảng"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="16sp"
                android:text="-"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtDenKhoang"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:layout_marginHorizontal="16dp"
                android:textSize="16sp"
                android:text="Đến khoảng"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtTatCaPhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả phòng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#64A89C"/>
        <TextView
            android:id="@+id/txt1Giuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 giường"
            android:textSize="16sp"
            android:layout_marginHorizontal="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txt2Giuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 giường"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtPhongVIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng VIP"
            android:textSize="16sp"
            android:layout_marginLeft="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDanhSachPhong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>