<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_border"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="10dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="#00CCFF"
            android:text="Nhiều khách chọn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"/>

        <!-- ImageView cho hình ảnh -->
        <ImageView
            android:id="@+id/imgImageRoomTop"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_4" />

        <!-- TextView mô tả phòng -->
        <TextView
            android:id="@+id/txtTitleRoomTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="8dp"
            android:text="Phòng đơn, ban công hướng ra biển, thoáng mát"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold" />

        <!-- Đánh giá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Đánh giá điểm số -->
            <TextView
                android:id="@+id/txt_soDiem_nhanXet"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/highlight_background"
                android:backgroundTint="#64A89C"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Khoảng trống giữa các phần tử -->
            <Space
                android:layout_width="7dp"
                android:layout_height="wrap_content" />

            <!-- Mô tả đánh giá -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_danhGia_trangthai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rất tốt"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_soLuongNhanXet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 nhận xét"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>