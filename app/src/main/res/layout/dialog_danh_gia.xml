<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Đánh giá của bạn"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_feedback_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:contentDescription="Feedback Icon"
            android:src="@drawable/face" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:numStars="5"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@android:color/holo_orange_light"
            android:rating="0"
            android:secondaryProgressTint="@android:color/holo_orange_light"
            android:stepSize="1.0" />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/br_edit_text"
            android:gravity="top"
            android:hint="Nhập bình luận của bạn..."
            android:inputType="textMultiLine"
            android:lines="4"
            android:padding="12dp"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi đánh giá"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:paddingVertical="12dp"
            android:background="@drawable/khung_button"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
